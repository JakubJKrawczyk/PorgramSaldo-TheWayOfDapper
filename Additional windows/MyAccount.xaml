<Window x:Class="ProgramSaldo_TheWayOfDapper.Additional_windows.MyAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramSaldo_TheWayOfDapper.Additional_windows"
        mc:Ignorable="d"
        Title="MyAccount" Height="500" ResizeMode="NoResize" Width="400">
    <Grid>
        <Canvas>
            <Grid Width="300" Height="400" Canvas.Left="50" Canvas.Top="50" Background="AliceBlue">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Background="#87bc5e" Width="300" Height="50" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="25" >Moje Konto</Label>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"  Background="White" Width="220" Height="30"></TextBlock>
                    <TextBlock Grid.Row="1" Background="White"  Width="220" Height="30" ></TextBlock>

                </Grid>

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"  Background="White" Width="220" Height="30"></TextBlock>
                    <TextBlock Grid.Row="1" Background="White"  Width="220" Height="30" ></TextBlock>

                </Grid>
                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"  Background="White" Width="220" Height="30"></TextBlock>
                    <TextBlock Grid.Row="1" Background="White"  Width="220" Height="30" ></TextBlock>

                </Grid>

            </Grid>
        </Canvas>
    </Grid>
</Window>
